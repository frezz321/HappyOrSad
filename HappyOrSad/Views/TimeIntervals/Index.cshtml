@model IEnumerable<HappyOrSad.Models.TimeInterval>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Question Display Options</h2>
<p class="has-error h3 alert-danger" style="text-align:center">@ViewBag.ErrorRole</p>
@if (Model != null)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TimeIntervalType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TimeIntervalType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Value)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.TimeIntervalID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.TimeIntervalID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.TimeIntervalID })
                </td>
            </tr>
        }

    </table>
}

<script>
    var menu = document.getElementById("optionsMenu");
    menu.classList.add("menuHover");
    menu.classList.add("selected");
</script>